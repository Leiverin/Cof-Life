<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DetailActivity"
    android:orientation="vertical"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/btn_color"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Title"
            style="@style/coffee_item_title"
            android:layout_marginVertical="@dimen/border_dimen"
            />
        <ImageView
            android:id="@+id/img_Coffee"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginHorizontal="@dimen/border_dimen"
            />
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            style="@style/coffee_item_description"
            android:text="Description"
            android:gravity="center"
            android:layout_marginVertical="@dimen/border_dimen"
            android:layout_marginHorizontal="@dimen/border_dimen"
            android:maxLines="6"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: 10"
            android:layout_gravity="right"
            android:layout_marginRight="32dp"
            style="@style/coffee_item_description"
            android:textColor="@color/teal_700"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="@dimen/border_dimen"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="300$"
                style="@style/coffee_item_price"
                android:gravity="center"
                android:textColor="@color/red"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_decrease"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:background="@drawable/btn_quantity"
                    />
                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"/>
                <Button
                    android:id="@+id/btn_increase"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:background="@drawable/btn_quantity"
                    />
            </LinearLayout>
            <ImageButton
                android:id="@+id/btn_add_to_cart"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="48dp"
                android:src="@drawable/cart_white_48"
                android:layout_gravity="center"
                android:paddingBottom="16dp"
                android:paddingTop="8dp"
                android:background="@drawable/btn_cart"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The maximum number of product has been reached"
            android:gravity="center"
            style="@style/coffee_item_status"
            android:textColor="@color/color_text_small"
        />
    </LinearLayout>

</LinearLayout>