<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/view_Cart"
    android:layout_marginVertical="4dp"
    android:padding="4dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/border_dimen"
    android:orientation="horizontal"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:baselineAligned="false"
        app:cardCornerRadius="@dimen/content_dimen"
        app:cardElevation="6dp"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/img_Coffee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="@dimen/content_dimen"
        android:layout_gravity="right"
        android:layout_marginLeft="-50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="55dp"
            android:paddingTop="6dp"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="COFFEE 1"
                android:textFontWeight="700"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/coffee_cate_title" />
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Descriptions"
                android:maxLines="1"
                android:ellipsize="end"
                style="@style/coffee_cate_description"
                android:layout_marginVertical="16dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="300$"
                    android:textColor="@color/red"
                    android:layout_gravity="center_vertical"
                    android:textFontWeight="500"
                    android:textAppearance="@style/coffee_cate_title" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="8dp"
                    >
                    <Button
                        android:id="@+id/btn_decrease"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="-"
                        android:background="@drawable/btn_quantity"
                        />
                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"/>
                    <Button
                        android:id="@+id/btn_increase"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="+"
                        android:background="@drawable/btn_quantity"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/imb_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/ic_baseline_backspace_24"
            android:background="@android:color/transparent"
            android:paddingRight="12dp"
            android:layout_marginTop="8dp"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>